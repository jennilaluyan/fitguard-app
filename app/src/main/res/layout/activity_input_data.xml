<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/desain_nama"
            android:contentDescription="Logo FITGUARD"
            android:layout_marginBottom="24dp"/>

        <!-- Age Input -->
        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"/>

        <!-- Weight Input -->
        <EditText
            android:id="@+id/editTextWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <!-- Blood Sugar Input -->
        <EditText
            android:id="@+id/editTextBloodSugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Sugar Level"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <!-- Blood Pressure Input -->
        <EditText
            android:id="@+id/editTextBloodPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Pressure (Systolic/Diastolic)"
            android:inputType="text"
            android:layout_marginTop="8dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
