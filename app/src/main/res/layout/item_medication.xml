<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Medication Image -->
            <ImageView
                android:id="@+id/image_medicine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_medicine"
                android:layout_marginEnd="16dp" />

            <!-- Medication Information -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Medication Name -->
                <TextView
                    android:id="@+id/text_nama_obat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Obat"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <!-- Medication Dose and Type (dosis + jenis obat) in one line -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical">

                    <!-- Dosis -->
                    <TextView
                        android:id="@+id/text_dosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dosis"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <!-- Medication Type -->
                    <TextView
                        android:id="@+id/text_jenis_obat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Obat"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Frequency -->
                <TextView
                    android:id="@+id/text_frekuensi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frekuensi"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <!-- Time -->
                <TextView
                    android:id="@+id/text_waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Edit and Delete Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <!-- Delete Button -->
                <ImageButton
                    android:id="@+id/button_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Hapus" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
