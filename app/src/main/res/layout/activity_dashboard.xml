<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <data>

    </data>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date Text -->
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday, 19 Jul"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginLeft="13dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_profile_pic"
                    android:contentDescription="Profile Picture"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop" />

                <!-- Texts for Date, Welcome, and Motivation Messages -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Welcome Text -->
                    <TextView
                        android:id="@+id/tv_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back, Jenn!"
                        android:textColor="#000"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <!-- Motivation Text -->
                    <TextView
                        android:id="@+id/tv_motivation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay balanced, stay strong."
                        android:textColor="#777"
                        android:textSize="12sp"
                        android:paddingTop="2dp" />




                </LinearLayout>
            </LinearLayout>


            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginVertical="8dp" />

            <!-- Grid Section for Feature Cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <!-- Health Record Card -->
                <LinearLayout
                    android:id="@+id/healthRecordCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_health_record" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Record"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <!-- Nutrition Tracker Card -->
                <LinearLayout
                    android:id="@+id/nutritionTrackerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_nutrition_tracker" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrition Tracker"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <!-- Physical Activity Card -->
                <LinearLayout
                    android:id="@+id/physicalActivityCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_physical_activity" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical Activity"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <!-- Water Tracker Card -->
                <LinearLayout
                    android:id="@+id/waterTrackerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_water_tracker" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water Tracker"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <!-- Medication Reminder Card -->
                <LinearLayout
                    android:id="@+id/medicationReminderCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_medication_reminder" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication Reminder"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

            </GridLayout>

            <!-- Recommendations Section -->
            <TextView
                android:id="@+id/tv_recommendations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendations"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginVertical="18dp" />

            <!-- First Recommendation: Food Recommendation with Three Images -->
            <LinearLayout
                android:id="@+id/foodRecommendationCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_recommendation_card"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <!-- Food Recommendation Image Grouped Horizontally -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_food_recommendation"
                    android:layout_marginEnd="4dp" />

                <!-- Food Recommendation Text -->
                <TextView
                    android:id="@+id/foodRecommendationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Food Recommendations"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Second Recommendation: Physical Activities -->
            <LinearLayout
                android:id="@+id/physicalActivitiesRecommendationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_recommendation_card"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_physical_activities_you_can_do" />

                <TextView
                    android:id="@+id/physicalActivitiesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Physical activities you can do"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Third Recommendation: Regular Bedtime -->
            <LinearLayout
                android:id="@+id/regularBedtimeRecommendationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_recommendation_card"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_regular_bedtime" />

                <TextView
                    android:id="@+id/regularBedtimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Regular Bedtime"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_nav_background"
        app:menu="@menu/bottom_nav_menu"
        app:itemBackground="@drawable/selector_bottom_nav_item_background"
        app:itemRippleColor="@android:color/transparent" />

</RelativeLayout>
</layout>